@model lab7.Models.IntegrationModel

@{
    ViewData["Title"] = "Trapezoidal Integral Calculator";
}

<h2>Trapezoidal Integral Calculator</h2>

<form asp-action="Calculate" method="post">
    <div>
        <label asp-for="LowerLimit"></label>
        <input asp-for="LowerLimit" class="form-control" />
        <span asp-validation-for="LowerLimit" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="UpperLimit"></label>
        <input asp-for="UpperLimit" class="form-control" />
        <span asp-validation-for="UpperLimit" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="SubIntervals"></label>
        <input asp-for="SubIntervals" class="form-control" />
        <span asp-validation-for="SubIntervals" class="text-danger"></span>
    </div>
    <div>
        <button type="submit" class="btn btn-primary mt-3">Calculate</button>
    </div>
</form>